<div class="container">
  <h2>Listing articles</h2> 
  <p><%= link_to 'New article', new_article_path %></p>
  
  <table class="table table-bordered">    
    <tbody>          
      <% @articles.each do |article| %>
        <% if article.id %>
        <% end %>
        <tr>
          <td>ID: <%= article.id %></td>    
          <td>Title: <%= article.title %></td>
          <td>Text: <%= article.text %></td>
          <td>Img: <%= image_tag article.avatar.url(:thumb) %></td>
          <td>Action: <%= link_to 'Show', article_path(article) %>
              <%= link_to 'Edit', edit_article_path(article) %>
              <%= link_to 'Delete', article_path(article), method: :delete, data: {confirm: "Are you sure?"}  %>
              <%= link_to "Export", article_export_file_path(article) %> </td>
        </tr>
      <% end %>    
    </tbody>
  </table>  
  <%= will_paginate @articles %>
</div>
